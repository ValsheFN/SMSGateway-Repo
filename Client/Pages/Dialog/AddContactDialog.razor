@using SMSGateway.Client.Models

@inject HttpClient _httpClient
@inject ISnackbar Snackbar

<MudDialog MaxWidth="MaxWidth.ExtraLarge"
        DisableBackdropClick="false"
        NoHeader="false"
        Position="DialogPosition.Center">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Create" Class="mr-3 mb-n1" />
            Create contact
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@contact.FirstName" Label="First Name" Required="true" RequiredError="First name is required!"/>
        <MudTextField @bind-Value="@contact.LastName" Label="Last Name" />
        <MudTextField @bind-Value="@contact.Email" Label="Email" />
        <MudTextField @bind-Value="@contact.PhoneNumber" Label="Phone Number" Required="true" RequiredError="Phone Number is required!"/>
        <MudTextField @bind-Value="@contact.Notes" Label="Notes" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="@((e)=>CreateContact(@contact) )">Create Contact</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public ContactModel contact { get; set; } = new ContactModel();

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void CreateContact(ContactModel model)
    {
        var response = _httpClient.PostAsJsonAsync("/api/contact/CreateContact/", model);
        Snackbar.Add("Contact Created", Severity.Success);
        MudDialog.Close(DialogResult.Ok(model.FirstName + " " + model.LastName));
    }
}
