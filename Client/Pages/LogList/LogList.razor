@page "/log"

@using SMSGateway.Server.Models
@using System.Net.Http.Json
@inject HttpClient httpClient
@attribute [Authorize]

<MudPaper Height="100%" Width="100%">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudTable Items="@Logs">
            <ToolBarContent>
                <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-4">Log</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>From</MudTh>
                <MudTh>Group Name</MudTh>
                <MudTh>Messages</MudTh>
                <MudTh>TimeSent</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="from">@context.From</MudTd>
                <MudTd DataLabel="sendTo">@context.SendTo</MudTd>
                <MudTd DataLabel="messages">@context.Messages</MudTd>
                <MudTd DataLabel="timeSent">@context.TimeSent</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager PageSizeOptions="new int[] { 25, 50, 100 }" />
            </PagerContent>
        </MudTable>
    </MudContainer>
</MudPaper>

@code {

    private string searchString = "";

    public class LogModel
    {
        public string From { get; set; }
        public string SendTo { get; set; }
        public string Messages { get; set; }
        public DateTime TimeSent { get; set; }
    }

    private IEnumerable<LogModel> Logs = new List<LogModel>();

    protected override async Task OnInitializedAsync()
    {
        Logs = await httpClient.GetFromJsonAsync<List<LogModel>>("/api/log/GetLog");
    }
}
