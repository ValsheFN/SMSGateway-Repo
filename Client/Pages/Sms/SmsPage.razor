@page "/sms"

@using SMSGateway.Client.Models
@using System.Net.Http.Json
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
@inject AuthenticationStateProvider _authenticationStateProvider
@inject MudBlazor.ISnackbar Snackbar
@inject HttpClient httpClient


<MudPaper Height="100%" Width="100%">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudCard>
            <MudCardContent>
                <MudPaper Class="pa-4 justify-center my-4 mud-text-align-center">
                    <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-4">SMS</MudText>
                </MudPaper>
                <MudForm>
                    <MudTextField Lines="6" Variant="Variant.Outlined" T="string" Label="Messages" Required="true" RequiredError="Messages is required!" />
                    <MudTextField Variant="Variant.Outlined" T="string" Label="Phone Number" />
                    <MudTextField Variant="Variant.Outlined" T="string" Label="Group"/>
                    @*<div class="d-flex">

                            <MudRadioGroup T="string" Required="true" RequiredError="Account type is required!">
                                <MudRadio Option="@("Personal")">Personal</MudRadio>
                                <MudRadio Option="@("Professional")">Professional</MudRadio>
                            </MudRadioGroup>
                        </div>*@
                </MudForm>
            </MudCardContent>
        </MudCard>

        <MudPaper Class="pa-4 justify-center my-4 mud-text-align-center">
            <MudButton Variant="Variant.Filled" Color="Color.Primary">Send</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mx-2">Reset</MudButton>
            <MudButton Variant="Variant.Filled">Cancel</MudButton>
        </MudPaper>
    </MudContainer>
</MudPaper>

